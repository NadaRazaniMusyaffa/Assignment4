<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/detailCoffeFavorite">

    <fragment
        android:id="@+id/detailCoffeFavorite"
        android:name="com.example.listcoffe.DetailCoffeFavorite"
        android:label="fragment_detail_coffe_favorite"
        tools:layout="@layout/fragment_detail_coffe_favorite" />
    <fragment
        android:id="@+id/listCoffeeFavorite"
        android:name="com.example.listcoffe.ListCoffeeFavorite"
        android:label="fragment_list_coffee_favorite"
        tools:layout="@layout/fragment_list_coffee_favorite" >
        <action
            android:id="@+id/action_listCoffeeFavorite_to_detailCoffeFavorite2"
            app:destination="@id/detailCoffeFavorite"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mainActivity"
        android:name="com.example.listcoffe.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main"
        >
        <action
            android:id="@+id/action_mainActivity_to_listCoffeeFavorite"
            app:destination="@id/listCoffeeFavorite" />
        <action
            android:id="@+id/action_mainActivity_to_coffee_list"
            app:destination="@id/coffee_list" />
    </fragment>
    <fragment
        android:id="@+id/coffee_list"
        android:name="com.example.listcoffe.coffee_list"
        android:label="coffee_list"
        tools:layout="@layout/fragment_activity_coffee_list">
        <action
            android:id="@+id/action_coffee_list_to_detailCoffeFavorite"
            app:destination="@id/detailCoffeFavorite"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

</navigation>